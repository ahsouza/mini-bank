{
  "name": "vitto-mini-bank",
  "version": "1.0.0",
  "description": "Exemplo Banco Digital",
  "author": "@ahsouza An√≠bal Henrique De Souza <annibalhsouza@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "standard": {
    "env": [
      "jest"
    ]
  },
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "nodemon index.ts",
    "test": "npx jest --colors --passWithNoTests --silent --noStackTrace --no-cache --runInBand",
    "test:unit": "npm test -- --watch --no-cache -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:verbose": "npx jest --passWithNoTests --no-cache --detectOpenHandles",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "test:ci": "npm test -- --coverage --silent",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "keywords": [
    "nodejs",
    "solid",
    "tdd",
    "jest",
    "helmet",
    "typescript",
    "express",
    "swagger",
    "mongodb"
  ],
  "dependencies": {
    "body-parser": "^1.19.0",
    "br-validations": "^0.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.7",
    "pine": "^1.1.1",
    "swagger-jsdoc": "^7.0.0-rc.6",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.23",
    "@types/mongoose": "^5.10.5",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "standard": "^16.0.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
